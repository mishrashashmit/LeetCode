#include <iostream>
#include <vector>
#include <string>
#include <climits>
using namespace std;

class Solution {
public:
    vector<string> commonChars(vector<string>& words) {
        vector<int> commonCount(26, INT_MAX); // Track min frequency of each char

        for (const string& word : words) {
            vector<int> count(26, 0); // Frequency for current word
            for (char c : word) {
                count[c - 'a']++;
            }
            for (int i = 0; i < 26; ++i) {
                commonCount[i] = min(commonCount[i], count[i]);
            }
        }

        vector<string> result;
        for (int i = 0; i < 26; ++i) {
            while (commonCount[i]-- > 0) {
                result.push_back(string(1, 'a' + i));
            }
        }

        return result;
    }
};
